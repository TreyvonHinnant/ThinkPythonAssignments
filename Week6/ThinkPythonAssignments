        "# IMPORT STATEMENTS\n",
        "# 1. Define the Fruitful Area Function\n",
        "def calculate_base_area(radius):\n",
        "    \"\"\"Calculates and returns the base area of a cylinder.\"\"\"\n",
        "    area = math.pi * (radius ** 2)\n",
        "    return area\n",
        "\n",
        "# 2. Define the Volume Function (calling the area function)\n",
        "def calculate_cylinder_volume(radius, height):\n",
        "    \"\"\"Calculates volume by calling the area function.\"\"\"\n",
        "    # \"Fruitful\" approach: Reuse the area calculation\n",
        "    base_area = calculate_base_area(radius)\n",
        "    volume = base_area * height\n",
        "    return volume\n",
        "\n",
        "# 3. Collect input from the user\n",
        "try:\n",
        "    r = float(input(\"Enter the radius of the cylinder: \"))\n",
        "    h = float(input(\"Enter the height of the cylinder: \"))\n",
        "\n",
        "    # 4. Calculate and Print the result\n",
        "    final_volume = calculate_cylinder_volume(r, h)\n",
        "    print(f\"The volume of the cylinder is: {final_volume:.2f}\")\n"
      ],
