      "source": [
        "# IMPORT STATEMENTS\n",
        "import math\n",
        "\n",
        "# 1. Define the area function: Area = π * r^2\n",
        "def calculate_area(radius):\n",
        "    \"\"\"Calculates the area of a circle given its radius.\"\"\"\n",
        "    return math.pi * (radius ** 2)\n",
        "\n",
        "# 2. Define the circumference function: C = 2 * π * r\n",
        "def calculate_circumference(radius):\n",
        "    \"\"\"Calculates the circumference of a circle given its radius.\"\"\"\n",
        "    return 2 * math.pi * radius\n",
        "\n",
        "# 3. Collect the radius\n",
        "try:\n",
        "    user_radius = float(input(\"Enter the radius of the circle: \"))\n",
        "\n",
        "    if user_radius < 0:\n",
        "        print(\"Radius cannot be negative.\")\n",
        "    else:\n",
        "        # 4. Call the functions\n",
        "        area = calculate_area(user_radius)\n",
        "        circumference = calculate_circumference(user_radius)\n",
        "\n",
        "        # 5. Test/Print results\n",
        "        print(\"-\" * 30)\n",
        "        print(f\"Radius: {user_radius}\")\n",
        "        print(f\"Area: {area:.4f}\")\n",
        "        print(f\"Circumference: {circumference:.4f}\")\n",
        "        print(\"-\" * 30)\n",
        "\n",
        "except ValueError:\n",
        "    print(\"Invalid input. Please enter a numerical value for the radius.\")"
      ],
