      "source": [
        "def print_twice(message):\n",
        "    \"\"\"This is a void function with one parameter.\"\"\"\n",
        "    print(message)\n",
        "    print(message)\n",
        "\n",
        "def add_two_numbers(a, b):\n",
        "    \"\"\"This is a fruitful function that returns a value.\"\"\"\n",
        "    result = a + b\n",
        "    return result\n",
        "\n",
        "# Calling the functions\n",
        "print_twice('Hello Python!')\n",
        "\n",
        "sum_val = add_two_numbers(5, 10)\n",
        "print(f'The sum is: {sum_val}')"
      ],
