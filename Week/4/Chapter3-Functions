        "def cat_twice(part1, part2):\n",
        "    # cat is a local variable\n",
        "    cat = part1 + part2\n",
        "    print_twice(cat)\n",
        "\n",
        "line1 = 'Bing tiddle '\n",
        "line2 = 'tiddle bang.'\n",
        "cat_twice(line1, line2)\n",
        "\n",
        "# Trying to print 'cat' here would cause a NameError because it is local to the function\n",
        "# print(cat)"
      ],
