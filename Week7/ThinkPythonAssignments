        "##### Import statements #####\n",
        "import random\n",
        "\n",
        "##### Function definitions #####\n",
        "\n",
        "# Define a function: evaluate_guess that evaluates a user guess and compares it to the random number, and give user feedback\n",
        "# Parameters needed: the guess from the user, the random number\n",
        "def evaluate_guess(guess, random_number):\n",
        "  # Check if the user guess is equal to the random number\n",
        "  if guess == random_number:\n",
        "    # If so, tell the user they won\n",
        "    print(\"Congrats! You won!\")\n",
        "    return True\n",
        "  # Elif the user guess is less than the random number\n",
        "   elif guess < random_number:\n",
        "    # If so, tell the user the number is too low\n",
        "    print(\"Your guess was to low\")\n",
        "    return False\n",
        "  # Elif the user guess is higher than the random number\n",
        "    # If so, tell the user that number is too high\n",
        "    elif guess > random_number:\n",
        "    # return False\n",
        "\n",
        "##### Program Logic #####\n",
        "\n",
        "# Generate the random number\n",
        "random_number = random.randrange(100)\n",
        "# TODO: remove this befor completion so the user doesn't know what the number is!\n",
        "print(random_number)\n",
